<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.minicalcib.MainActivity"
    android:background="@drawable/thefrnd1">



    <TextView
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/e1"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
        android:background="@drawable/border_green" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/e1"
        android:id="@+id/t1"
        android:textSize="27sp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#3842f9"
        android:paddingEnd="4dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/t1"
        android:id="@+id/e2"
        android:textAlignment="textEnd"
        android:textSize="27sp"
        android:textColor="#f90727"
        android:text="0"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/e2"
        android:layout_alignBottom="@+id/e2"
        android:id="@+id/t2"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#fc0404" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_alignBottom="@+id/e1"
       android:id="@+id/tt"
       android:textSize="27sp"
       android:text="0"
       android:textAlignment="textEnd"
       android:textColor="#0521fb"
       android:paddingEnd="4dp"
       android:background="@drawable/border_green" />





    <Button
        style="@style/AppTheme"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="C"
        android:id="@+id/b1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/e1"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:background="@drawable/number" />

   <Button
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:text="+"
       android:layout_alignParentLeft="true"
    android:layout_below="@+id/b1"
    android:id="@+id/b3"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
       android:background="@drawable/number" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="-"
        android:layout_toEndOf="@+id/b3"
        android:layout_alignBottom="@+id/b3"
        android:id="@+id/b4"
        android:layout_marginLeft="23dp"
        android:textSize="40sp"
        android:background="@drawable/number" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="x"
        android:layout_toEndOf="@+id/b4"
        android:layout_alignBottom="@+id/b4"
        android:id="@+id/b5"
        android:layout_marginLeft="23dp"
        android:textSize="40sp"
        android:background="@drawable/number" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="/"
        android:layout_toEndOf="@+id/b5"
        android:layout_alignBottom="@+id/b5"
        android:id="@+id/b6"
        android:layout_marginLeft="23dp"
        android:textSize="40sp"
        android:background="@drawable/number"
        android:layout_alignParentRight="true"/>






    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="^"
        android:layout_below="@+id/b3"
        android:id="@+id/b7"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textSize="40sp"
        android:background="@drawable/number" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="%"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/b7"
        android:layout_alignBottom="@+id/b7"
        android:id="@+id/b8"
        android:layout_marginLeft="23dp"
        android:textSize="40sp"
        android:background="@drawable/number" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="ln"
        android:textAllCaps="false"
        android:layout_toEndOf="@+id/b8"
        android:layout_alignBottom="@+id/b8"
        android:id="@+id/b9"
        android:layout_marginLeft="23dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
        android:capitalize="none"
        android:background="@drawable/number" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="="
        android:layout_toEndOf="@+id/b9"
        android:layout_alignBottom="@+id/b9"
        android:layout_marginLeft="23dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:textSize="40sp"
        android:id="@+id/b2"
        android:background="@drawable/number" />






</RelativeLayout>
